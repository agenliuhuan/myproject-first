<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_activity_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_title"
        layout="@layout/comm_title_bar" />

    <RelativeLayout
        android:layout_width="604px"
        android:layout_height="82px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px" >

        <EditText
            android:id="@+id/edt_fogot_1_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edt_general_normal"
            android:hint="@string/activity_fogot_1_edt_phone"
            android:inputType="phone"
            android:paddingLeft="128px"
            android:textColor="#333333"
            android:textColorHint="#bab9b9"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:layout_width="102px"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_login_phone"
                android:textColor="#888888"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="44px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#949494" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>