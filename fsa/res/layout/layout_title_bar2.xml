<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height2"
    android:background="#05b031" >

    <Button
        android:id="@+id/btn_title_left2"
        android:layout_width="@dimen/layout_title_bar_btn_title_left_width"
        android:layout_height="@dimen/layout_title_bar_btn_title_left_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_left_titlebar_selector2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/layout_titlebar2_logo_width"
        android:layout_height="@dimen/layout_titlebar2_logo_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_titlebar_tip" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_main_textView1_39_layout_height2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_titlebar_line" />

    <TextView
        android:id="@+id/txt_title_center2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/comm_green"
        android:textSize="@dimen/font_size_title_1" />

    <Button
        android:id="@+id/btn_title_right2"
        android:layout_width="@dimen/layout_title_bar_btn_title_left_width"
        android:layout_height="@dimen/layout_title_bar_btn_title_left_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@drawable/button_text_color_selector"
        android:textSize="@dimen/font_size_title_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_title_right22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_title_bar_btn_title_right_marginRight"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@drawable/button_text_color_selector"
        android:textSize="@dimen/font_size_title_button"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_title_bar_textView1_height"
        android:layout_alignParentBottom="true"
        android:background="@color/textview_green_text_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title_tip2"
        android:layout_width="@dimen/layout_title_bar_txt_title_tip_width"
        android:layout_height="@dimen/layout_title_bar_txt_title_tip_height"
        android:layout_marginLeft="@dimen/layout_title_bar_txt_tip_layout_marginLeft"
        android:layout_marginTop="@dimen/layout_title_bar_txt_tip_layout_marginTop"
        android:background="@drawable/icon_title_red_point"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title_tip_text2"
        android:layout_width="@dimen/layout_title_bar_txt_title_tip_text_width"
        android:layout_height="@dimen/layout_title_bar_txt_title_tip_text_height"
        android:layout_marginLeft="@dimen/layout_title_bar_txt_tip_layout_marginLeft"
        android:layout_marginTop="@dimen/layout_title_bar_txt_tip_layout_marginTop"
        android:background="@drawable/icon_title_event_red_point"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12"
        android:visibility="gone" />

</RelativeLayout>