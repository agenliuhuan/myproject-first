<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="HardcodedText,NestedWeights" 
    android:background="@drawable/on_item_selected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_item_height_small"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_myfamily_image"
            android:layout_width="@dimen/comm_image_width_small"
            android:layout_height="@dimen/comm_image_height_small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/comm_item_margin"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tv_myfamily_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_item_myfamily_name_marginLeft"
            android:text=" "
            android:textColor="@color/comm_black"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

</LinearLayout>