<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_checknotify_height"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/item_checknotify_user_image"
            android:layout_width="@dimen/item_checknotify_user_imagewidth"
            android:layout_height="@dimen/item_checknotify_user_imageheight"
            android:layout_marginLeft="@dimen/comm_item_margin"
            android:layout_marginTop="@dimen/comm_item_margin"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_checknotify_LL_marginLeft"
            android:layout_marginRight="@dimen/comm_item_margin"
            android:layout_marginTop="@dimen/item_checknotify_LL_marginTop"
            android:layout_toRightOf="@id/item_checknotify_user_image"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_checknotify_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/comm_black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/item_checknotify_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/comm_item_margin"
                    android:textColor="@color/comm_black_gray"
                    android:textSize="@dimen/font_size_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_checknotify_status_rlHeight"
                android:layout_marginTop="@dimen/item_checknotify_status_rlmarginTop"
                android:background="@drawable/checknotify_content_bg" >

                <ImageView
                    android:id="@+id/item_checknotify_status_img"
                    android:layout_width="@dimen/item_checknotify_status_imgWidth"
                    android:layout_height="@dimen/item_checknotify_status_imgHeight"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_checknotify_status_imgmarginleft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_checknotify_status_llmarginLeft"
                    android:layout_marginRight="@dimen/comm_item_margin"
                    android:layout_toRightOf="@id/item_checknotify_status_img"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/item_checknotify_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comm_black"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_checknotify_status_tvmarginTop"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/item_checknotify_content_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/comm_black"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/item_checknotify_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/comm_green"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>