<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_activity_background"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/titlebar_familyout"
        layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar_familyout"
        android:layout_marginTop="@dimen/activity_familyout_LinearLayout_marginTop"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_line_height"
                android:background="@color/comm_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/family_detail_toplayout_height"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_familyout_image"
                    android:layout_width="@dimen/family_detail_image"
                    android:layout_height="@dimen/family_detail_image"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_familyout_img_familyout_image_marginLeft"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_familyout_LinearLayout_marginLeft"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_familyout_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/comm_black"
                        android:textSize="@dimen/font_size_normal" />

                    <TextView
                        android:id="@+id/tv_familyout_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_familyout_tv_familyout_phone_marginTop"
                        android:text=" "
                        android:textColor="@color/comm_black_gray"
                        android:textSize="@dimen/font_size_midle" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_line_height"
                android:background="@color/comm_line_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_familyout_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_familyout_tv_familyout_tip_marginLeft"
            android:layout_marginRight="@dimen/activity_familyout_tv_familyout_tip_marginRight"
            android:layout_marginTop="@dimen/activity_familyout_tv_familyout_tip_marginTop"
            android:gravity="center"
            android:text=""
            android:textColor="@color/comm_black"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_line_height"
            android:layout_marginLeft="@dimen/activity_familyout_View_marginLeft"
            android:layout_marginRight="@dimen/activity_familyout_View_marginRight"
            android:layout_marginTop="@dimen/activity_familyout_View_marginTop"
            android:background="@color/comm_line_color" />

        <Button
            android:id="@+id/btn_familyout_invite"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/comm_button_height"
            android:layout_marginLeft="@dimen/comm_btn_margin"
            android:layout_marginRight="@dimen/comm_btn_margin"
            android:layout_marginTop="@dimen/activity_familyout_btn_familyout_invite_marginTop"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="@string/activity_familyout_btn_invite"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

</RelativeLayout>