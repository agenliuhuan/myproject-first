<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80px"
        android:layout_marginBottom="40px"
        android:layout_above="@+id/layout_four_p" >

        <android.support.v4.view.ViewPager
            android:id="@+id/guide_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false" >

        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_four_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_buttons"
        
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/img_guide_first"
            android:layout_width="@dimen/activity_guide_img_guide_first_3_layout_width"
            android:layout_height="@dimen/activity_guide_img_guide_first_4_layout_height"
            android:layout_marginRight="@dimen/activity_guide_img_guide_first_2_layout_marginRight"
            android:src="@drawable/current" />

        <ImageView
            android:id="@+id/img_guide_second"
            android:layout_width="@dimen/activity_guide_img_guide_second_6_layout_width"
            android:layout_height="@dimen/activity_guide_img_guide_second_7_layout_height"
            android:layout_centerHorizontal="false"
            android:layout_marginRight="@dimen/activity_guide_img_guide_second_5_layout_marginRight"
            android:src="@drawable/other" />

        <ImageView
            android:id="@+id/img_guide_third"
            android:layout_width="@dimen/activity_guide_img_guide_third_9_layout_width"
            android:layout_height="@dimen/activity_guide_img_guide_third_10_layout_height"
            android:layout_centerHorizontal="false"
            android:layout_marginRight="@dimen/activity_guide_img_guide_third_8_layout_marginRight"
            android:src="@drawable/other" />

        <ImageView
            android:id="@+id/img_guide_fourth"
            android:layout_width="@dimen/activity_guide_img_guide_fourth_11_layout_width"
            android:layout_height="@dimen/activity_guide_img_guide_fourth_12_layout_height"
            android:src="@drawable/other" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_guide_linearLayout1_15_layout_marginBottom"
        android:layout_marginLeft="@dimen/activity_guide_linearLayout1_13_layout_marginLeft"
        android:layout_marginRight="@dimen/activity_guide_linearLayout1_14_layout_marginRight"
        android:layout_marginTop="@dimen/activity_guide_linearLayout1_15_layout_marginBottom" >

        <Button
            android:id="@+id/btn_guide_login"
            android:layout_width="@dimen/activity_guide_btn_guide_login_0_layout_width"
            android:layout_height="@dimen/comm_button_height"
            android:layout_weight="1"
            android:background="@drawable/button_login_selector"
            android:text="@string/activity_guide_btn_login"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_size_18" />

        <Button
            android:id="@+id/btn_guide_register"
            android:layout_width="@dimen/activity_guide_btn_guide_register_1_layout_width"
            android:layout_height="@dimen/comm_button_height"
            android:layout_marginLeft="@dimen/activity_guide_btn_guide_register_16_layout_marginLeft"
            android:layout_weight="1"
            android:background="@drawable/button_register_selector"
            android:text="@string/activity_guide_btn_register"
            android:textColor="#575757"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

</RelativeLayout>