<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_activity_background"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/titlebar_fogot_2"
        layout="@layout/layout_title_bar" />

    <EditText
        android:id="@+id/edt_fogot_2_check"
        style="@style/EditStyle"
        android:layout_below="@+id/titlebar_fogot_2"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="@dimen/activity_fogot_2_edt_fogot_2_check_0_layout_marginLeft"
        android:layout_marginRight="@dimen/activity_fogot_2_edt_fogot_2_check_1_layout_marginRight"
        android:layout_marginTop="@dimen/activity_fogot_2_edt_fogot_2_check_2_layout_marginTop"
        android:hint="@string/activity_fogot_2_edt_check"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_fogot_2_tip_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_fogot_2_check"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="@dimen/activity_fogot_2_tv_fogot_2_tip_1_3_layout_marginLeft"
        android:layout_marginRight="@dimen/activity_fogot_2_tv_fogot_2_tip_1_4_layout_marginRight"
        android:layout_marginTop="@dimen/activity_fogot_2_tv_fogot_2_tip_1_5_layout_marginTop"
        android:text="@string/activity_fogot_2_tv_tip_1"
        android:textColor="@color/setting_item_text_color"
        android:textSize="@dimen/font_size_16" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fogot_2_tip_1"
        android:layout_below="@+id/tv_fogot_2_tip_1"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="@dimen/activity_fogot_2_RelativeLayout_6_layout_marginTop" >

        <TextView
            android:id="@+id/tv_fogot_2_tip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/activity_fogot_2_tv_tip_2"
            android:textColor="@color/setting_item_text_color"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/btn_fogot_2_resend"
            android:layout_width="@dimen/activity_fogot_2_btn_fogot_2_resend_0_layout_width"
            android:layout_height="@dimen/activity_fogot_2_btn_fogot_2_resend_1_layout_height"
            android:layout_toRightOf="@id/tv_fogot_2_tip_2"
            android:background="@drawable/button_resend_selector"
            android:text="@string/activity_fogot_2_tv_resend"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

</RelativeLayout>