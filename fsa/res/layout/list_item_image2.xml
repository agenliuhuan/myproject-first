<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/comm_activity_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_image_family"
        android:layout_width="@dimen/list_item_image_img_image_family_6_layout_width"
        android:layout_height="@dimen/list_item_image_img_image_family_7_layout_height"
        android:layout_marginBottom="@dimen/list_item_image_img_image_family_5_layout_marginBottom"
        android:layout_marginLeft="@dimen/list_item_image_img_image_family_2_layout_marginLeft"
        android:layout_marginRight="@dimen/list_item_image_img_image_family_3_layout_marginRight"
        android:layout_marginTop="@dimen/list_item_image_img_image_family_4_layout_marginTop" />

    <ImageView
        android:id="@+id/img_image_kuang"
        android:layout_width="@dimen/list_item_image_img_image_kuang_10_layout_width"
        android:layout_height="@dimen/list_item_image_img_image_kuang_11_layout_height"
        android:layout_marginLeft="@dimen/list_item_image_img_image_kuang_8_layout_marginLeft"
        android:layout_marginRight="@dimen/list_item_image_img_image_kuang_9_layout_marginRight"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_image_name"
        android:layout_width="@dimen/list_item_image_img_image_kuang_100_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/img_image_kuang"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="@dimen/font_size_12" />

</RelativeLayout>