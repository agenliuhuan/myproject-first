    <mobi.dlys.android.familysafer.view.RoundProgressBar
        android:id="@+id/item_viewer_progressBar"
        android:layout_width="@dimen/comm_image_width_big"
        android:layout_height="@dimen/comm_image_height_big"
        android:layout_centerInParent="true" />

</RelativeLayout>