<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/comm_activity_background" >

    <include
        android:id="@+id/titlebar_sentclue"
        layout="@layout/layout_title_bar" />

    <LinearLayout
        android:id="@+id/img_sentclue_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_sentclue_img_sentclue_map_height"
        android:layout_below="@+id/titlebar_sentclue"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" />

    <Button
        android:id="@+id/sentclue_capBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar_sentclue"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sendclue_cap_selector" />

    <TextView
        android:id="@+id/tv_sentclue_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_sentclue_map"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_sentclue_tv_sentclue_tip_1_marginTop"
        android:text="@string/activity_sentclue_tv_tip_1"
        android:textColor="@color/comm_green"
        android:textSize="@dimen/font_size_19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentclue_tip_1"
        android:layout_marginTop="@dimen/activity_sentclue_LinearLayout_marginTop"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_sentclue_tip_2"
                android:layout_width="@dimen/activity_sentclue_img_sentclue_sendok_width"
                android:layout_height="@dimen/activity_sentclue_img_sentclue_sendok_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:src="@drawable/sendok" />

            <TextView
                android:id="@+id/tv_sentclue_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/comm_btn_margin"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:layout_toLeftOf="@+id/img_sentclue_tip_2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/activity_sentclue_tv_tip_2"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_sentclue_tip_3"
                android:layout_width="@dimen/activity_sentclue_img_sentclue_sendok_width"
                android:layout_height="@dimen/activity_sentclue_img_sentclue_sendok_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:src="@drawable/sendok" />

            <TextView
                android:id="@+id/tv_sentclue_tip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/comm_btn_margin"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:layout_toLeftOf="@+id/img_sentclue_tip_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/activity_sentclue_tv_tip_3"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sentclue_tip_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/comm_btn_margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/activity_sentclue_tv_tip_4"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />

            <ImageView
                android:id="@+id/img_sentclue_tip_4"
                android:layout_width="@dimen/activity_sentclue_img_sentclue_sendok_width"
                android:layout_height="@dimen/activity_sentclue_img_sentclue_sendok_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:src="@drawable/sendok" />

            <TextView
                android:id="@+id/tv_sentclue_tip_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:layout_toLeftOf="@+id/img_sentclue_tip_4"
                android:layout_toRightOf="@+id/sentclue_tip_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_sentclue_tip_5"
                android:layout_width="@dimen/activity_sentclue_img_sentclue_sendok_width"
                android:layout_height="@dimen/activity_sentclue_img_sentclue_sendok_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:src="@drawable/sendok" />

            <TextView
                android:id="@+id/tv_sentclue_tip_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/comm_btn_margin"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:layout_toLeftOf="@+id/img_sentclue_tip_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/activity_sentclue_tv_tip_5"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_sentclue_tip_7"
                android:layout_width="@dimen/activity_sentclue_img_sentclue_sendok_width"
                android:layout_height="@dimen/activity_sentclue_img_sentclue_sendok_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:src="@drawable/sendok" />

            <TextView
                android:id="@+id/tv_sentclue_tip_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/comm_btn_margin"
                android:layout_marginRight="@dimen/comm_btn_margin"
                android:layout_toLeftOf="@+id/img_sentclue_tip_7"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/activity_sentclue_tv_tip_6"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>