<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_two_button_LinearLayout_0_layout_marginLeft"
    android:layout_marginRight="@dimen/dialog_two_button_LinearLayout_1_layout_marginRight"
    android:background="@drawable/button_mydialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_two_button_LinearLayout_4_layout_height"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/dialog_title_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <TextView
            android:id="@+id/txt_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_two_button_txt_dialog_content_11_layout_marginLeft"
            android:layout_marginRight="@dimen/dialog_two_button_txt_dialog_content_12_layout_marginRight"
            android:layout_marginTop="@dimen/dialog_two_button_txt_dialog_content_13_layout_marginTop"
            android:lineSpacingExtra="@dimen/dialog_two_button_txt_dialog_content_15_lineSpacingExtra"
            android:gravity="left"
            android:text="@string/dialog_title_tip"
            android:textColor="@color/comm_black"
            android:textSize="@dimen/font_size_16" />

    <View
        android:layout_marginTop="@dimen/dialog_two_button_txt_dialog_content_14_layout_marginBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_two_button_TextView_18_layout_width"
        android:background="@color/button_dialog_border_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="@dimen/dialog_two_button_btn_dialog_confirm_16_layout_width"
            android:layout_height="@dimen/dialog_two_button_btn_dialog_confirm_17_layout_height"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_left_bg_selector"
            android:text="@string/btn_confirm"
            android:textColor="@color/comm_green"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:layout_width="@dimen/dialog_two_button_TextView_18_layout_width"
            android:layout_height="match_parent"
            android:background="@color/button_dialog_border_color" />

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="@dimen/dialog_two_button_btn_dialog_cancel_19_layout_width"
            android:layout_height="@dimen/dialog_two_button_btn_dialog_cancel_20_layout_height"
            android:layout_weight="1"
            android:background="@drawable/button_dialog_right_bg_selector"
            android:text="@string/btn_cancel"
            android:textColor="@color/comm_green"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</LinearLayout>