<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ClueImage_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/comm_black_transparent_background" >

        <Button
            android:id="@+id/ClueImage_leftBtn"
            android:layout_width="@dimen/layout_title_bar_btn_title_left_width"
            android:layout_height="@dimen/layout_title_bar_btn_title_left_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_back_selector" />

        <TextView
            android:id="@+id/ClueImage_center_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title_1" />

        <Button
            android:id="@+id/ClueImage_rightBtn"
            android:layout_width="@dimen/layout_title_bar_btn_title_left_width"
            android:layout_height="@dimen/layout_title_bar_btn_title_left_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_del_selector" />
    </RelativeLayout>

</RelativeLayout>