<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_myclue_user"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:layout_margin="@dimen/list_item_myclue_img_myclue_user_margin"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_myclue_LinearLayout_margin"
        android:layout_marginRight="@dimen/list_item_myclue_LinearLayout_margin"
        android:layout_marginTop="@dimen/list_item_myclue_LinearLayout_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_myclue_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tv_myclue_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/comm_gray"
                android:textSize="@dimen/font_size_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_myclue_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_myclue_tv_myclue_content_marginTop"
            android:lineSpacingExtra="@dimen/list_item_myclue_gv_myclue_content_linespacing"
            android:textColor="@color/comm_black"
            android:textSize="@dimen/font_size_normal" />

        <GridView
            android:id="@+id/gv_myclue_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:horizontalSpacing="@dimen/list_item_myclue_gv_myclue_images_horizontalSpacing"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/list_item_myclue_gv_myclue_images_verticalSpacing" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_myclue_location"
                android:layout_width="@dimen/list_item_myclue_img_myclue_location_width"
                android:layout_height="@dimen/list_item_myclue_img_myclue_location_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_location" />

            <TextView
                android:id="@+id/tv_myclue_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/list_item_myclue_tv_myclue_location_marginRight"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/comm_black_gray"
                android:textSize="@dimen/font_size_midle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>