<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slidingmenu_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_item_height"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/img_menu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_menu_item_img_menu_item_icon_0_layout_marginLeft" />

        <TextView
            android:id="@+id/menu_item_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_menu_item_menu_item_txt_name_1_layout_marginLeft"
            android:layout_toRightOf="@+id/img_menu_item_icon"
            android:gravity="center_vertical|left"
            android:textColor="@color/slidingmenu_text_color"
            android:textSize="@dimen/font_size_17" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_menu_item_RelativeLayout_2_layout_marginLeft"
            android:layout_marginTop="@dimen/layout_menu_item_RelativeLayout_3_layout_marginTop"
            android:layout_toRightOf="@+id/menu_item_txt_name" >

            <ImageView
                android:id="@+id/img_menu_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_menu_item_status_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_menu_item_txt_menu_item_status_text_5_layout_height"
                android:background="@drawable/icon_menu_event_red_point"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>