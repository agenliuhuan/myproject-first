<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@drawable/on_item_selected" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_item_height_big"
        android:layout_marginLeft="@dimen/comm_item_margin"
        android:layout_marginRight="@dimen/comm_item_margin" >

        <ImageView
            android:id="@+id/img_request_image"
            android:layout_width="@dimen/comm_image_width_big"
            android:layout_height="@dimen/comm_image_height_big"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_item_request_LinearLayout_layout_margin"
            android:layout_marginRight="@dimen/list_item_request_LinearLayout_layout_margin"
            android:layout_toLeftOf="@+id/layout_request_FL"
            android:layout_toRightOf="@+id/img_request_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_request_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/comm_black"
		        android:ellipsize="end"
		        android:singleLine="true"                  
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tv_request_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/comm_black_gray"
                android:textSize="@dimen/font_size_midle" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_request_FL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:id="@+id/layout_request_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_request_1_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:text=" "
                    android:textColor="@color/comm_black"
                    android:textSize="@dimen/font_size_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_request_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_request_2_accept"
                    android:layout_width="@dimen/item_button_width"
                    android:layout_height="@dimen/item_button_height"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_green_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/fragment_familyrequest_btn_accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_request_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img_request_3_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_request_3_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/list_item_request_status_textview_marginleft"
                    android:layout_toRightOf="@+id/img_request_3_icon"
                    android:text=" "
                    android:textColor="@color/comm_black"
                    android:textSize="@dimen/font_size_15" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>