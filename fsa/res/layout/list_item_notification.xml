<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/on_item_selected"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/notify_go"
        android:layout_width="@dimen/list_item_notification_notify_go_layout_width"
        android:layout_height="@dimen/list_item_notification_notify_go_layout_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/comm_item_margin"
        android:src="@drawable/notify_gonext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/item_notification_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_notification_user_image"
                android:layout_width="@dimen/comm_image_width_small"
                android:layout_height="@dimen/comm_image_height_small"
                android:layout_marginLeft="@dimen/comm_item_margin"
                android:layout_marginTop="@dimen/comm_item_margin"
                android:src="@drawable/user" />

            <LinearLayout
                android:id="@+id/item_notification_mainLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/comm_item_margin"
                android:layout_marginRight="@dimen/comm_item_margin"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/list_item_notification_item_notification_record_marginLeft"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:id="@+id/layout_notification_sos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/comm_item_margin"
                            android:layout_marginTop="@dimen/comm_item_margin" >

                            <TextView
                                android:id="@+id/item_notification_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/comm_black"
                                android:textSize="@dimen/font_size_normal" />

                            <RelativeLayout
                                android:id="@+id/item_notification_record_RL1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/item_notication_recordbg_selector"
                                android:clickable="true" >

                                <ImageView
                                    android:id="@+id/item_notification_record_RL1_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/comm_item_margin"
                                    android:background="@anim/img_record" />

                                <TextView
                                    android:id="@+id/item_notification_record_RL1_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/comm_item_margin"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_size_16" />
                            </RelativeLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/layout_notification_sos_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/comm_item_margin"
                            android:layout_marginTop="@dimen/list_item_notification_layout_notification_sos_confirm_layout_marginTop" >

                            <RelativeLayout
                                android:id="@+id/item_notification_location_LL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/item_notification_location_iv"
                                    android:layout_width="@dimen/list_item_notification_ImageView_layout_width"
                                    android:layout_height="@dimen/list_item_notification_ImageView_layout_height"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/img_location" />

                                <TextView
                                    android:id="@+id/item_notification_location_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/list_item_notification_item_notification_content_marginLeft"
                                    android:layout_toRightOf="@+id/item_notification_location_iv"
                                    android:textColor="@color/comm_black"
                                    android:textSize="@dimen/font_size_midle" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/item_notification_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/comm_black"
                                android:textSize="@dimen/font_size_midle" />

                            <RelativeLayout
                                android:id="@+id/item_notification_record_RL2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/item_notication_recordbg_selector"
                                android:clickable="true" >

                                <ImageView
                                    android:id="@+id/item_notification_record_RL2_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/comm_item_margin"
                                    android:background="@anim/img_record" />

                                <TextView
                                    android:id="@+id/item_notification_record_RL2_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/comm_item_margin"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_size_16" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/item_notification_LL"
            android:layout_marginBottom="@dimen/comm_item_margin"
            android:layout_marginTop="@dimen/comm_item_margin" >

            <TextView
                android:id="@+id/item_notifucation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/notification_item_timebg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>