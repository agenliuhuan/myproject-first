<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <ImageView
        android:layout_width="@dimen/firstclueview_image_width"
        android:layout_height="@dimen/firstclueview_image_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/firstclueview_image_marginTop"
        android:background="@drawable/firstclue1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/radar_view_im_dian1_7_layout_marginTop"
        android:layout_marginRight="@dimen/radar_view_im_dian1_7_layout_marginTop"
        android:layout_marginTop="@dimen/firstclueview_text_marginTop"
        android:textColor="@color/unified_loading_text"
        android:textSize="@dimen/font_size_18" 
        android:text="@string/firstclueviewtext1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/firstclueview_text_marginTop"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/firstclueview_LLimg_width"
            android:layout_height="@dimen/firstclueview_LLimg_height"
            android:background="@drawable/current" />

        <ImageView
            android:layout_width="@dimen/firstclueview_LLimg_width"
            android:layout_height="@dimen/firstclueview_LLimg_height"
            android:layout_marginLeft="@dimen/firstclueview_LLimg_margin"
            android:background="@drawable/other" />

        <ImageView
            android:layout_width="@dimen/firstclueview_LLimg_width"
            android:layout_height="@dimen/firstclueview_LLimg_height"
            android:layout_marginLeft="@dimen/firstclueview_LLimg_margin"
            android:background="@drawable/other" />
    </LinearLayout>

</LinearLayout>